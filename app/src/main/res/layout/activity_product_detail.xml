<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/myToolbar"
        layout="@layout/item_action_bar" />

    <!-- Product Image ViewPager2 Section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/productImagePager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <!-- Optional: Image indicator dots -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/imageIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00000000"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/heart_background"
            android:padding="4dp"
            android:src="@drawable/heart" />

    </FrameLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Regular Fit T-Shirt"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Rating -->
            <TextView
                android:id="@+id/productRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="⭐ 4.8/5 (120 reviews)"
                android:textColor="#FFA000"
                android:textSize="14sp" />

            <!-- Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Soft cotton T-shirt with a modern fit. Perfect for everyday wear."
                android:textColor="#666"
                android:textSize="14sp" />

            <!-- Choose Size -->
            <TextView
                android:id="@+id/chooseSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Choose size"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Size Options -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTechnologies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp"
                app:singleSelection="true" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar with Price and Add to Cart Button -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Price -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$1,190"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Add to Cart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Add to cart"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>