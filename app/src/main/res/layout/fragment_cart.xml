<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.cart.CartFragment">

    <!-- Header -->
    <include
        android:id="@+id/myToolbar"
        layout="@layout/item_action_bar" />

    <!-- Loading View -->
    <RelativeLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myToolbar"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Loading your cart..."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- Empty Cart View -->
    <RelativeLayout
        android:id="@+id/emptyCartView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myToolbar"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEmptyCartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Your cart is empty"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmptyCartMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmptyCartTitle"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Looks like you haven't added anything to your cart yet"
            android:textColor="#757575"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinueShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmptyCartMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:text="Continue Shopping"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />
    </RelativeLayout>

    <!-- Cart Content Container -->
    <RelativeLayout
        android:id="@+id/cartContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myToolbar"
        android:visibility="visible">

        <!-- Free Shipping Progress Section -->
        <LinearLayout
            android:id="@+id/freeShippingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/freeShippingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="You're eligible for FREE shipping!"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/freeShippingEligibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Add ₹500 more to get FREE shipping!"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/shippingProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="50"
                android:progressTint="#4CAF50" />
        </LinearLayout>

        <!-- Cart Items -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/freeShippingSection"
            android:layout_above="@id/actionButtons">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_cart" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/summaryCard"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
        </LinearLayout>

        <!-- Summary Section -->
        <RelativeLayout
            android:id="@+id/summaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnCheckout"
            android:background="#F5F5F5"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSubtotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub-total"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="₹2,450" />

            <TextView
                android:id="@+id/tvShippingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSubtotalLabel"
                android:layout_marginTop="8dp"
                android:text="Shipping fee"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvShippingLabel"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="FREE" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvShippingLabel"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="16dp"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvTotalLabel"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="₹2,450" />
        </RelativeLayout>

        <!-- Checkout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:paddingVertical="12dp"
            android:text="Checkout"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end" />
    </RelativeLayout>

</RelativeLayout>